<form action="/teams" method="POST">
    <h3>Superhero Team</h3>
    <p>Team Name: <input type="text" id="team_name" name="team[name]"></p>
    <p>Motto: <input type="text" id="team_motto" name="team[motto]"></p>
    <h3>Superhero 1</h3> 
    <p>Superhero Name: <input type="text" id="member1_name" name="team[members][][name]"></p>
    <p>Superhero Power: <input type="text" id="member1_power" name="team[members][][power]"></p>
    <p>Superhero Biography: <input type="text" id="member1_bio" name="team[members][][bio]"></p>
